C_COMPUTE_UNITS := 1
D_COMPUTE_UNITS := 2
PARALLEL_BLOCK  := 8
ENABLE_P2P		:= 1

ifneq ($(findstring u2x4, $(DEVICE)), u2x4)
	ENABLE_P2P := 0
endif

ifndef XILINX_ENABLE_VITIS_HLS
  XILINX_ENABLE_VITIS_HLS = 1
  export XILINX_ENABLE_VITIS_HLS
endif

CXXFLAGS += -DPARALLEL_BLOCK=$(PARALLEL_BLOCK) -DENABLE_P2P=$(ENABLE_P2P) -DC_COMPUTE_UNIT=$(C_COMPUTE_UNITS) -DD_COMPUTE_UNIT=$(D_COMPUTE_UNITS) -DOVERLAP_HOST_DEVICE 

{
    "runtime": ["OpenCL"],
    "example" : "Snappy",
    "overview" : [
        "Xilinx implementation of Snappy application is aimed at achieving high throughput for both compression and decompression."
    ],
    "os": [
        "Linux"
    ],
    "include_paths": [
            "GIT_REPO/common/libs/xcl2/",
            "GIT_REPO/common/libs/cmdparser/",
            "GIT_REPO/common/libs/logger/"
    ], 
    "host_srcs": [
        "./src/host.cpp",
        "./src/xil_snappy.cpp",
        "GIT_REPO/common/libs/xcl2/xcl2.cpp",
        "GIT_REPO/common/libs/cmdparser/cmdlineparser.cpp",
        "GIT_REPO/common/libs/logger/logger.cpp"
    ],
    "host_hdrs": [
        "./src/xil_snappy.h",
        "./src/xil_snappy_config.h",
        "GIT_REPO/common/libs/xcl2/xcl2.hpp",
        "GIT_REPO/common/libs/cmdparser/cmdlineparser.h",
        "GIT_REPO/common/libs/logger/logger.h"
    ],
    "host_exe": "xil_snappy_8b",
    "config_make" : "config.mk",
    "cmd_args": "./xil_snappy_8b -cx BUILD/compress.xclbin -dx BUILD/decompress.xclbin -l ../cantrbry.list",
    "containers": [
        {
            "name": "compress",
            "clflags": "--xp param:compiler.enableAutoPipelining=false -DPARALLEL_BLOCK=$(PARALLEL_BLOCK)", 
            "ldclflags": "--sp xil_snappy_cu1_1.m_axi_gmem0:bank0 --sp xil_snappy_cu1_1.m_axi_gmem1:bank0 --sp xil_snappy_cu2_1.m_axi_gmem0:bank3 --sp xil_snappy_cu2_1.m_axi_gmem1:bank3 --xp vivado_param:project.writeIntermediateCheckpoints=1",
            "accelerators": [
                {
                    "kernel_name": "xil_snappy_cu1",
                    "srcs": "../../src/hw/xil_snappy_compress_kernel.cpp",
                    "include_path": [
                        "GIT_REPO/L1/include/hw/",
                        "./src/"
                    ],
                    "clflags": "-DC_COMPUTE_UNIT=1"
                },
                {
                    "kernel_name": "xil_snappy_cu2",
                    "srcs": "../../src/hw/xil_snappy_compress_kernel.cpp",
                    "include_path": [
                        "GIT_REPO/L1/include/hw/",
                        "./src/"
                    ],
                    "clflags": "-DC_COMPUTE_UNIT=2"
                }
            ]
        }, 
        {
            "name": "decompress",
            "ldclflags": "--sp xil_snappy_dec_cu1_1.m_axi_gmem0:bank1 --sp xil_snappy_dec_cu1_1.m_axi_gmem1:bank1 --sp xil_snappy_dec_cu2_1.m_axi_gmem0:bank2 --sp xil_snappy_dec_cu2_1.m_axi_gmem1:bank2 --xp vivado_param:project.writeIntermediateCheckpoints=1",
            "accelerators": [
                {
                    "kernel_name": "xil_snappy_dec_cu1", 
                    "srcs": "../../src/hw/xil_snappy_decompress_kernel.cpp",
                    "include_path": [
                        "GIT_REPO/L1/include/hw/",
                        "./src/"
                    ],
                    "clflags": "-DD_COMPUTE_UNIT=1"
                },
                {
                    "kernel_name": "xil_snappy_dec_cu2", 
                    "srcs": "../../src/hw/xil_snappy_decompress_kernel.cpp",
                    "include_path": [
                        "GIT_REPO/L1/include/hw/",
                        "./src/"
                    ],
                    "clflags": "-DD_COMPUTE_UNIT=2"
                }
             ]
        }
    ],
    "contributors" : [
        {
            "group": "Xilinx",
            "url" : "http://www.xilinx.com"
        }
    ] 
}
